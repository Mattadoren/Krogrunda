<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.mima.jeda.frsa.krogrunda"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="se.mima.jeda.frsa.krogrunda.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeSelectorMain" >
        </activity>
        <activity
            android:name="se.mima.jeda.frsa.krogrunda.SplashscreenActivity"
            android:label="@string/title_activity_splashscreen"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeSelectorSplash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.mima.jeda.frsa.krogrunda.PubsActivity"
            android:label="@string/title_activity_pubs"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeSelectorMain" >
        </activity>
        <activity
            android:name="se.mima.jeda.frsa.krogrunda.PubInfoActivity"
            android:label="@string/title_activity_pub_info" >
        </activity>
    </application>
</manifest>