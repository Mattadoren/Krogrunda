<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tapInfoImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ingenbild" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="3dp" >

            <TextView
                android:id="@+id/tapInfoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColor="#4F4F4F"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tapInfoAbv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4F4F4F"
                android:textSize="16dp" />
            
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dip"
            android:background="@android:color/holo_blue_light"
            android:padding="3dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@android:color/holo_blue_dark"
            android:padding="3dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dip"
            android:background="@android:color/holo_blue_light"
            android:padding="3dp" />

        <TextView
            android:id="@+id/tapInfoBrewery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4F4F4F"
            android:textSize="19dp" />
        
             <TextView
            android:id="@+id/tapInfoCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4F4F4F"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tapInfoType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4F4F4F"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>